# i3blocks configuration for developers
# Global properties
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[cpu_usage]
label=CPU 
interval=10
color=#81A1C1

[memory]
label=MEM 
interval=30
color=#A3BE8C

[disk]
label=DISK 
instance=/
interval=30
color=#D08770

[wireless]
label=WiFi 
instance=wlan0
interval=10
color=#88C0D0

[ethernet]
label=ETH 
instance=eth0
interval=10
color=#88C0D0

[battery]
label=BAT 
interval=30
color=#EBCB8B

[volume]
label=VOL 
interval=once
signal=10
color=#B48EAD

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
color=#ECEFF4